<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet  id="3"  author="MIKE">
        <createTable  tableName="travels">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="travel_name" type="varchar(255)"/>
            <column name="number_of_seats" type="int"/>
            <column name="number_occupied_seats" type="int"/>
            <column name="price_per_seat" type="int"/>
            <column name="start_date" type="date"/>
            <column name="finish_date" type="date"/>
        </createTable>
        <rollback>
            drop table travel
        </rollback>
    </changeSet>

</databaseChangeLog>