<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet  id="8"  author="MIKE">
        <createTable  tableName="travel_orders">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="travel_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_travel_order_travel_id" references="travels(id)"/>
            </column>
            <column name="client_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_travel_order_client_id" references="clients(id)"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_travel_order_user_id" references="users(id)"/>
            </column>
            <column name="number_of_seats" type="int"/>
            <column name="order_date" type="date"/>
            <column name="payment_date" type="date"/>
        </createTable>
        <rollback>
            drop table travel_orders
        </rollback>
    </changeSet>

</databaseChangeLog>