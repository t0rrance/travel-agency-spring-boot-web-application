<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet  id="4"  author="MIKE">
        <createTable  tableName="travel_accommodations">
            <column name="travel_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" foreignKeyName="fk_travel_accommodations_travel_id" references="travels(id)"/>
            </column>
            <column name="accommodation_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" foreignKeyName="fk_travel_accommodations_accommodation_id" references="accommodations(id)"/>
            </column>
        </createTable>
        <rollback>
            drop table travel_accommodations
        </rollback>
    </changeSet>

</databaseChangeLog>